<?xml version="1.0" encoding="UTF-8"?>
<!-- *************************************************** -->
<!-- 初診時特有情報 -->
<!-- FirstClinicModule XSD Version 4.0 -->
<!-- *************************************************** -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://www.medxml.net/MML/v4/ContentModule/FirstClinic/1.0" 
  xmlns:mmlFcl="http://www.medxml.net/MML/v4/ContentModule/FirstClinic/1.0"
  xmlns:mmlRd="http://www.medxml.net/MML/v4/ContentModule/RegisteredDiagnosis/1.0"
  xmlns:mmlFc="http://www.medxml.net/MML/v4/SharedComponent/Facility/1.0"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  
  <xs:import namespace="http://www.medxml.net/MML/v4/ContentModule/RegisteredDiagnosis/1.0" schemaLocation="registereddiagnosis.xsd" />
  <xs:import namespace="http://www.medxml.net/MML/v4/SharedComponent/Facility/1.0" schemaLocation="facility.xsd" />
  
  <xs:element name="FirstClinicModule">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" ref="mmlFcl:familyHistory"/>
        <xs:element minOccurs="0" ref="mmlFcl:childhood"/>
        <xs:element minOccurs="0" ref="mmlFcl:pastHistory"/>
        <xs:element minOccurs="0" ref="mmlFcl:chiefComplaints"/>
        <xs:element minOccurs="0" ref="mmlFcl:presentIllnessNotes"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="familyHistory">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="mmlFcl:familyHistoryItem"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="familyHistoryItem" >
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="mmlFcl:relation"/>
        <xs:element ref="mmlRd:RegisteredDiagnosisModule"/>
        <xs:element ref="mmlFcl:age" minOccurs="0"/>
        <xs:element ref="mmlFcl:memo" minOccurs="0"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="relation" type="xs:string"/>
  
  <xs:element name="age" type="xs:string"/>
  
  <xs:element name="memo" type="xs:string"/>
  
  <xs:element name="childhood">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" ref="mmlFcl:birthInfo"/>
        <xs:element minOccurs="0" ref="mmlFcl:vaccination"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="birthInfo">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" ref="mmlFc:Facility"/>
        <xs:element minOccurs="0" ref="mmlFcl:deliveryWeeks"/>
        <xs:element minOccurs="0" ref="mmlFcl:deliveryMethod"/>
        <xs:element minOccurs="0" ref="mmlFcl:bodyWeight"/>
        <xs:element minOccurs="0" ref="mmlFcl:bodyHeight"/>
        <xs:element minOccurs="0" ref="mmlFcl:chestCircumference"/>
        <xs:element minOccurs="0" ref="mmlFcl:headCircumference"/>
        <xs:element minOccurs="0" ref="mmlFcl:memo"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="deliveryWeeks" type="xs:string"/>
  
  <xs:element name="deliveryMethod" type="xs:string"/>
  
  <xs:element name="bodyWeight">
    <xs:complexType mixed="true">
      <xs:attributeGroup ref="mmlFcl:attlist.bodyWeight"/>
    </xs:complexType>
  </xs:element>
  
  <xs:attributeGroup name="attlist.bodyWeight">
    <xs:attribute name="unit" use="required" form="qualified"/>
  </xs:attributeGroup>
  
  <xs:element name="bodyHeight">
    <xs:complexType mixed="true">
      <xs:attributeGroup ref="mmlFcl:attlist.bodyHeight"/>
    </xs:complexType>
  </xs:element>
  
  <xs:attributeGroup name="attlist.bodyHeight">
    <xs:attribute name="unit" use="required" form="qualified"/>
  </xs:attributeGroup>
  
  <xs:element name="chestCircumference">
    <xs:complexType mixed="true">
      <xs:attributeGroup ref="mmlFcl:attlist.chestCircumference"/>
    </xs:complexType>
  </xs:element>
  
  <xs:attributeGroup name="attlist.chestCircumference">
    <xs:attribute name="unit" use="required" form="qualified"/>
  </xs:attributeGroup>
  
  <xs:element name="headCircumference">
    <xs:complexType mixed="true">
      <xs:attributeGroup ref="mmlFcl:attlist.headCircumference"/>
    </xs:complexType>
  </xs:element>
  
  <xs:attributeGroup name="attlist.headCircumference">
    <xs:attribute name="unit" use="required" form="qualified"/>
  </xs:attributeGroup>
  
  <xs:element name="vaccination">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="mmlFcl:vaccinationItem"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="vaccinationItem">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="mmlFcl:vaccine"/>
        <xs:element ref="mmlFcl:injected"/>
        <xs:element minOccurs="0" ref="mmlFcl:age"/>
        <xs:element minOccurs="0" ref="mmlFcl:memo"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="vaccine" type="xs:string"/>
  
  <xs:element name="injected" type="xs:string"/>
  
  <xs:element name="pastHistory">
    <xs:complexType>
      <xs:choice>
        <xs:element ref="mmlFcl:freeNotes"/>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="mmlFcl:pastHistoryItem"/>
      </xs:choice>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="pastHistoryItem">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="mmlFcl:timeExpression"/>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="mmlFcl:eventExpression"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="timeExpression" type="xs:string"/>
  
  <xs:element name="eventExpression" type="xs:string"/>
  
  <xs:element name="chiefComplaints" type="xs:string"/>
  
  <xs:element name="presentIllnessNotes" type="xs:string"/>
  
  <xs:element name="freeNotes" type="xs:string"/>
  
</xs:schema>
